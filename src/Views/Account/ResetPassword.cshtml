@using Bastille.Id.Server.Core.Extensions
@model Bastille.Id.Server.Core.Security.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = Resources.ResetPasswordText;
    Layout = "~/Views/Shared/_Landing.cshtml";
}
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center align-items-center h-100">
            <div class="card-wrapper">
                <div class="brand">
                    @*render the tenant name and logo image specified*@
                    <div class="text-center">
                        @if (!string.IsNullOrWhiteSpace(Model.TenantName))
                        {
                            <div class="row">
                                <div class="tenant-title col-md-6 col-sm-6 ml-auto mr-auto text-center">
                                    <h2 class="title">@Model.TenantName</h2>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.LoginLogoImageUrl))
                        {
                            <img src="@Model.LoginLogoImageUrl" class="mb-lg-5" />
                        }
                    </div>
                </div>
                <div class="card fat">
                    <div class="card-body">
                        @if (Model.EnableLocalLogin)
                        {
                            <h4 class="card-title">@Resources.ForgotYourPasswordText</h4>
                            <form method="POST" asp-controller="Account" asp-action="ResetPassword" asp-antiforgery="true">
                                <div class="form-group">
                                    <label asp-for="Password">@Resources.NewPasswordText</label>
                                    <input type="password" asp-for="Password" placeholder="@Resources.NewPasswordText" class="form-control" autocomplete="new-password" />
                                    <span asp-validation-for="Password" class="alert-danger"></span>

                                    <label asp-for="ConfirmPassword">@Resources.ConfirmPasswordText</label>
                                    <input type="password" asp-for="ConfirmPassword" placeholder="@Resources.ConfirmPasswordText" class="form-control" autocomplete="off" />
                                    <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                    <div class="form-text text-muted">
                                        @Bastille.Id.Core.Properties.Resources.PromptPasswordRequirementsText
                                    </div>
                                </div>

                                <div class="form-group m-0">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        @Resources.ResetPasswordText
                                    </button>
                                </div>
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Code" />
                                <input type="hidden" asp-for="ReturnUrl" />
                                <input type="hidden" asp-for="TenantName" />
                                <input type="hidden" asp-for="LoginApplicationName" />
                                <input type="hidden" asp-for="LoginLogoImageUrl" />
                            </form>

                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <strong>@Resources.AuthenticationInvalidRequestErrorTitleText</strong>
                                @Resources.AuthenticationNoSchemesErrorText
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}