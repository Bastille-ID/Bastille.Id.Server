@model Bastille.Id.Server.Core.Security.Models.ExternalLoginViewModel
@{
    ViewData["Title"] = Resources.ExternalLoginText;
    Layout = "~/Views/Shared/_Landing.cshtml";
}
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center align-items-center h-100">
            <div class="card-wrapper">
                <div class="brand">
                    @*render the tenant name and logo image specified*@
                    <div class="text-center">
                        @if (!string.IsNullOrWhiteSpace(Model.TenantName))
                        {
                            <div class="row">
                                <div class="tenant-title col-md-6 col-sm-6 ml-auto mr-auto text-center">
                                    <h2 class="title">@Model.TenantName</h2>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.LoginLogoImageUrl))
                        {
                            <img src="@Model.LoginLogoImageUrl" class="mb-lg-5" />
                        }
                    </div>
                </div>
                <div class="card fat">
                    <div class="card-body">
                        @string.Format(Resources.ExternalLoginMessageText, @Model.LoginProvider)
                        <form method="POST" asp-action="ExternalLoginConfirmation" asp-controller="Account" asp-antiforgery="true">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <label asp-for="Email">@Resources.EmailText</label>
                                <input type="email" asp-for="Email" placeholder="@Resources.EmailText" class="form-control" autofocus="autofocus" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            @if (ViewBag.RequiresName)
                            {
                                <div class="form-group">
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="form-label-group">
                                                <label asp-for="FirstName">@Resources.FirstNameText</label>
                                                <input type="text" asp-for="FirstName" placeholder="@Resources.FirstNameText" class="form-control" required="required" autofocus="autofocus" autocomplete="given-name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-label-group">
                                                <label asp-for="LastName">@Resources.LastNameText</label>
                                                <input type="text" asp-for="LastName" placeholder="@Resources.LastNameText" class="form-control" required="required" autocomplete="family-name">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group pl-lg-5">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            }

                            <div class="form-group m-0">
                                <button type="submit" class="btn btn-primary btn-block">
                                    @Resources.RegisterText
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}