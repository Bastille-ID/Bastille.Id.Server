{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=BastilleId;Integrated Security=SSPI;MultipleActiveResultSets=true",
    "RedisConnection": "localhost:6379,abortConnect=False,name=BastilleId,connectTimeout=15000,syncTimeout=2000"
  },
  "ApplicationSettings": {
    "Security": {
      "DataPersistence": {
        "Method": "Redis",
        "AzureBlobUriWithToken": "",
        "FolderPath": "",
        "PersistenceLengthDays": 90,
        "Thumbprint": ""
      },
      "SigningKey": {
        "StoreLocation": "CurrentUser",
        "Thumbprint": ""
      },
      "AllowedOrigins": []
    },

    "Webhook": {
      "MaximumRequestCount": 10,
      "RetryWaitInterval": 10,
      "RetryWaitIntervalIncreaseRatio": 1.5
    },

    "Messaging": {
      "SenderType": "Smtp",
      "FromAddress": "",
      "HostName": "localhost",
      "Port": 25,
      "UserName": "",
      "Password": "",
      "UseSsl": false,
      "TokenValues": [],
      "QueueProcessingIntervalSeconds": 5
    },

    "Account": {
      "AllowRegistration": true,
      "AllowLocalLogin": true,
      "AllowRememberLogin": true,
      "RequiresEmailVerification": true,
      "RememberMeLoginDurationDays": 30,
      "ShowLogoutPrompt": true,
      "AutomaticRedirectAfterSignOut": true,
      "WindowsAuthentationSchemeName": "",
      "IncludeWindowsGroups": false,
      "RequireNameIdentification": false,
      "AllowSignInBeforeEmailVerification": false,
      "LimitAccessBeforeEmailVerification": true,
      "AllowExternalAutoProvision": false,
      "AllowExternalRegistration": true,
      "RequiredLoginIdentifier": "Email",
      "TwoFactor": {
        "Method": "None"
      },
      "Passwords": {
        "RequiredUniqueChars": 1,
        "RequiredLength": 8,
        "RequireNonAlphanumeric": true,
        "RequireLowercase": true,
        "RequireUppercase": true,
        "RequireDigit": true
      },
      "ExternalProviders": []
    },

    "Storage": {
      "RootPath": "",
      "StorageType": "Local"
    },

    "ApplicationInsights": {
      "InstrumentationKey": "",
      "ConnectionString": "",
      "Tags": ""
    },

    "Recaptcha": {
      "Enabled": false,
      "SiteKey": "",
      "SecretKey": ""
    },
    "Captcha": {
      "SiteKey": "",
      "Secret": ""
    },
    "Advanced": {
      "ConsentEnableOfflineAccess": true,
      "MinimumCompletionPortThreads": 200,
      "TokenCleanupIntervalSeconds": 60,
      "MaxDegreeOfParallelism": 0,
      "MemoryCacheLifeMinutes": 10,
      "AutoMigrate": true,
      "ForceSsl": true,
      "ShowDiagnostics": false,
      "AppDataSubFolderName": "App_Data"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug",
        "Microsoft.AspNetCore.Authentication": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Bastille-ID-API"
    }
  }
}